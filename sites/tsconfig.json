{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*.{ts,tsx}"],
      "@content/*": ["src/content/*.{ts,tsx}"],
      "@data/*": ["src/data_files/*.{ts,tsx}"],
      "@images/*": ["src/images/*.{ts,tsx}"],
      "@scripts/*": ["src/assets/scripts/*.{ts,tsx}"],
      "@styles/*": ["src/assets/styles/*.{ts,scss,css}"],
      "@utils/*": ["src/utils/*.{ts,tsx}"]
    },
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
  }
}
